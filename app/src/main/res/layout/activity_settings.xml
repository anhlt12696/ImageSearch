<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activity.SettingsActivity"
    android:background="?attr/background_theme"
        >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/btnBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginStart="@dimen/_13sdp"
               android:layout_marginTop="@dimen/_13sdp"
               android:layout_marginEnd="@dimen/_13sdp"
               android:layout_marginBottom="@dimen/_13sdp"
               android:src="@drawable/ic_back"
               android:paddingBottom="3dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Setting"
               android:textColor="@color/black"
               android:layout_centerVertical="true"
               android:textStyle="bold"
               android:textSize="20dp"
               android:layout_toEndOf="@+id/btnBack"
               android:paddingVertical="@dimen/_20sdp" />
       </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_item_language"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lnLanguage"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:drawablePadding="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:text="@string/language"
                    android:textColor="?attr/text_color"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/icon_language"/>
                <ImageView

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_right_arrow"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/btn_red_uncheck"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:alpha=".35"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lnDarkMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:layout_weight="6"
                    android:text="Dark Mode"
                    android:textSize="16sp"
                    android:textColor="?attr/text_color"
                    app:drawableStartCompat="@drawable/icon_darkmode" />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_right_arrow"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_language"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tvRateus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:drawablePadding="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:text="Rate us"
                android:textColor="?attr/text_color"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/icon_rateus"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right_arrow"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/btn_red_uncheck"

            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_12sdp"
                android:layout_weight="6"
                android:fontFamily="@font/inter_regular"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:text="About us"
                android:textSize="16sp"
                android:textColor="?attr/text_color"
                app:drawableStartCompat="@drawable/icon_aboutus" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right_arrow"/>
        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
